{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "wrap",
			"problemMatcher": [],
			"label": "npm: wrap",
			"detail": "使用nodemon自动重启服务"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [],
			"label": "npm: lint",
			"detail": "使用eslint检查语法和查找问题"
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "npm: test",
			"detail": "mocha --exit"
		},
		{
			"type": "npm",
			"script": "cov",
			"problemMatcher": [],
			"label": "npm: cov",
			"detail": "nyc mocha --exit"
		},
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node"
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"enableDebugging": true
			}
		}
	]
}